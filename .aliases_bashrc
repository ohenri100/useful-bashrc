# Office
alias word='/tools/OpenOffice/openoffice.org3/program/soffice $1'
alias powerpoint='/tools/OpenOffice/openoffice.org3/program/simpress $1'
alias excel='/tools/OpenOffice/openoffice.org3/program/scalc $1'
alias formular='/tools/OpenOffice/openoffice.org3/program/smath'
alias draw='/tools/OpenOffice/openoffice.org3/program/sdraw'

alias d_out='find . -name "output" -exec rm -r "{}" \;'

